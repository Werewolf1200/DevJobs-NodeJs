<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form">
        <div class="campo">
            <label>Nombre</label>
            <input value={{usuario.nombre}} type="text" name="nombre" placeholder="Tu Nombre" required>
        </div>
        <div class="campo">
            <label>E-Mail</label>
            <input value={{usuario.email}} type="email" name="email" placeholder="Tu E-Mail" required>
        </div>
        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Tu Password">
        </div>
        <div class="campo">
            <input value="Guardar Cambios" type="submit" class="btn btn-azul">
        </div>
    </form>
</main>